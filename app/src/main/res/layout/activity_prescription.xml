<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f7f7f"
    tools:context=".PrescriptionActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prescription"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:id="@+id/pres_text"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:id="@+id/pres_medicines_card"
        android:elevation="8dp"
        android:layout_below="@+id/pres_text"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:background="#fa6452"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medicines"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#CCCACA"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No medicines recommended"
                android:id="@+id/pres_medicines"
                android:textAlignment="center"
                android:paddingHorizontal="10dp"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:id="@+id/pres_tests_card"
        android:elevation="8dp"
        android:layout_below="@+id/pres_medicines_card"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:background="#fa6452"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tests"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#CCCACA"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No tests recommended"
                android:paddingHorizontal="10dp"
                android:id="@+id/pres_tests"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:id="@+id/pres_precautions_card"
        android:layout_below="@+id/pres_tests_card"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:background="#fa6452"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precautions"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#CCCACA"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No precautions recommended"
                android:textAlignment="center"
                android:id="@+id/pres_precautions"
                android:paddingHorizontal="10dp"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:id="@+id/pres_description_card"
        android:layout_below="@+id/pres_precautions_card"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:background="#fa6452"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#CCCACA"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No description"
                android:textAlignment="center"
                android:textSize="16sp"
                android:id="@+id/pres_description"
                android:paddingHorizontal="10dp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:elevation="8dp"
        android:id="@+id/pres_call_time_card"
        android:layout_below="@+id/pres_description_card"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:background="#fa6452"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call timing :"
                android:layout_weight="2"
                android:textSize="15sp"
                android:paddingHorizontal="10dp"
                android:textStyle="bold"
                android:textColor="#CCCACA"
                android:paddingVertical="5dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp"
                android:id="@+id/pres_call_time"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:paddingVertical="5dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:id="@+id/pres_video_call_link_card"
        android:elevation="8dp"
        android:layout_below="@+id/pres_call_time_card"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:background="#fa6452"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link for video call"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#CCCACA"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="16sp"
                android:paddingHorizontal="10dp"
                android:id="@+id/pres_video_call_link"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:paddingVertical="5dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>

    </ScrollView>
</LinearLayout>