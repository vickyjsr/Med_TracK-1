<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout android:background="#808080" android:gravity="center" android:orientation="vertical" tools:context=".EnterManually" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="74dp" android:layout_width="match_parent" tools:ignore="MissingConstraints" android:src="@drawable/ic_top_vector"/>


    -<RelativeLayout android:gravity="center" android:layout_height="match_parent" android:layout_width="match_parent" android:padding="25dp">


    -<LinearLayout android:gravity="center" android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="match_parent" android:padding="10dp" android:paddingTop="60dp">


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="16sp" android:textColor="#efefef" android:text="Body Temperature :" android:layout_weight="2"/>

    <EditText android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="2" android:textAlignment="center" android:inputType="numberDecimal" android:hint="in Fahrenheit" android:id="@+id/ent_man_temp"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="16sp" android:textColor="#efefef" android:text="Sp o2 :" android:layout_weight="1"/>

    <EditText android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:textAlignment="center" android:inputType="numberDecimal" android:hint="in %" android:id="@+id/ent_man_oxy_sat"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="16sp" android:textColor="#efefef" android:text="Pulse Rate :" android:layout_weight="2"/>

    <EditText android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="2" android:textAlignment="center" android:inputType="number" android:hint="per minute" android:id="@+id/ent_man_pulse"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="16sp" android:textColor="#efefef" android:text="Respiratory rate :" android:layout_weight="2"/>

    <EditText android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="2" android:textAlignment="center" android:inputType="number" android:hint="per minute" android:id="@+id/ent_man_res_rate"/>

</LinearLayout>


    -<LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="16sp" android:textColor="#efefef" android:text="Blood Pressure :" android:layout_weight="2"/>

    <EditText android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="2" android:textAlignment="center" android:inputType="text" android:hint="in mmHg" android:id="@+id/ent_man_blood_pressure"/>

</LinearLayout>

    <Button android:background="@drawable/button_rad" android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="#2F4F4F" android:text="next" android:id="@+id/ent_man_next_btn" android:textStyle="bold" android:layout_margin="50dp"/>

</LinearLayout>

</RelativeLayout>

    <ImageView android:layout_height="wrap_content" android:layout_width="match_parent" tools:ignore="DuplicateIds" android:src="@drawable/ic_bottom_vector" android:id="@+id/iv_bottom" android:layout_alignParentBottom="true" android:adjustViewBounds="true"/>

</RelativeLayout>