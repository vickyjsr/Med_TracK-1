<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".PatientRegistration" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    -<ScrollView android:layout_height="match_parent" android:layout_width="match_parent" android:background="#2F4F4F" android:padding="12dp" android:orientation="vertical">


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:background="@drawable/layout_draw" android:padding="20dp" android:orientation="vertical" tools:ignore="MissingConstraints">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:civ_border_color="#5A5A5A"
            android:id="@+id/pat_reg_img"
            android:src="@drawable/profile_512"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pat_reg_img"
            android:text="select image"/>
    </RelativeLayout>

    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="#000058" android:textSize="15sp" android:text="Name :" android:layout_weight="3"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/reg_pat_name" android:layout_marginBottom="5dp" android:inputType="text"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/text_col" android:textSize="15sp" android:text="E-mail id :" android:layout_weight="3"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/reg_pat_email_id" android:layout_marginBottom="5dp" android:inputType="textEmailAddress"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/text_col" android:textSize="15sp" android:text="Contact no :" android:layout_weight="3"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/reg_pat_mob_no" android:layout_marginBottom="5dp" android:inputType="number"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="380dp" android:textColor="@color/text_col" android:textSize="15sp" android:text="Date of Birth :" android:layout_weight="2"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"  android:layout_weight="1" android:id="@+id/reg_pat_dob" android:layout_marginBottom="5dp" android:inputType="text" android:gravity="center_horizontal" android:hint="DD-MM-YYYY" android:textAlignment="center"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:paddingBottom="5dp">

    <TextView android:layout_height="36dp" android:layout_width="374dp" android:textColor="@color/text_col" android:textSize="15sp" android:text="Blood Group:" android:layout_weight="2"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:id="@+id/reg_pat_blood_group" android:layout_marginBottom="5dp" android:inputType="text" android:gravity="center_horizontal" android:textAlignment="center"/>

</LinearLayout>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/text_col" android:textSize="15sp" android:text="Select your gender :" android:layout_weight="2" android:paddingVertical="5dp"/>


    -<RadioGroup android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:id="@+id/reg_pat_sex_rad_grp" android:layout_marginBottom="5dp">

    <RadioButton android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/radio_b" android:textSize="10sp" android:text="Male" android:layout_weight="1" android:id="@+id/reg_pat_male"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/radio_b" android:textSize="10sp" android:text="Female" android:layout_weight="1" android:id="@+id/reg_pat_female"/>

    <RadioButton android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/radio_b" android:textSize="10sp" android:text="Others" android:layout_weight="1" android:id="@+id/reg_pat_others"/>

</RadioGroup>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/text_col" android:textSize="15sp" android:text="Weight :" android:layout_weight="1"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"  android:layout_weight="1" android:id="@+id/reg_pat_weight" android:layout_marginBottom="5dp" android:inputType="number" android:gravity="center_horizontal" android:hint="Kg" android:textAlignment="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/text_col" android:textSize="15sp" android:text="Height :" android:layout_weight="1" android:paddingLeft="10dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"  android:layout_weight="1" android:id="@+id/reg_pat_height" android:layout_marginBottom="5dp" android:inputType="number" android:gravity="center_horizontal" android:hint="cm" android:textAlignment="center"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="371dp" android:textColor="@color/text_col" android:textSize="15sp" android:text="Allergies :" android:layout_weight="3"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/reg_pat_allergy"
        android:layout_marginBottom="5dp"
        android:inputType="text"
        android:hint="Optional"
        android:textAlignment="center"
        android:paddingHorizontal="1dp"
        android:gravity="center_horizontal" />

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="443dp" android:textColor="@color/text_col" android:textSize="15sp" android:text="ChronicDisease :" android:layout_weight="2"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal"  android:layout_weight="1" android:id="@+id/reg_pat_chronic_disease" android:layout_marginBottom="5dp" android:inputType="text" android:hint="Optional" android:textAlignment="center" android:paddingLeft="10dp"
        android:gravity="center_horizontal" />

</LinearLayout>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/text_col" android:textSize="15sp" android:text="Residential Address :" android:layout_weight="2" android:paddingVertical="5dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"  android:id="@+id/reg_pat_locality" android:layout_marginBottom="5dp" android:inputType="text" android:hint=" Street / Locality / Village " android:paddingHorizontal="5dp"/>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"  android:layout_weight="1" android:id="@+id/reg_pat_city" android:layout_marginBottom="5dp" android:inputType="text" android:hint="City" android:paddingHorizontal="5dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"  android:layout_weight="1" android:id="@+id/reg_pat_pin_code" android:layout_marginBottom="5dp" android:inputType="number" android:hint="PIN CODE" android:paddingHorizontal="5dp"/>

</LinearLayout>


    -<LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal">

    <TextView android:layout_height="wrap_content" android:layout_width="399dp" android:textColor="@color/text_col" android:textSize="15sp" android:text="Password :" android:layout_weight="3"/>

    <EditText android:layout_height="wrap_content" android:layout_width="match_parent"  android:layout_weight="1" android:id="@+id/reg_pat_password" android:layout_marginBottom="5dp" android:inputType="textPassword" android:hint="At least 6 digits" android:paddingHorizontal="5dp"/>

</LinearLayout>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textColor="@color/colorAccent" android:textSize="12sp" android:text="Tip: Keep your details updated in edit profile section" android:gravity="center_horizontal" android:textAlignment="center" android:layout_marginVertical="20dp"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:background="@drawable/button_rad" android:padding="5dp" android:text="register" android:id="@+id/pat_reg_btn" android:layout_marginHorizontal="60dp"/>

</LinearLayout>

</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
