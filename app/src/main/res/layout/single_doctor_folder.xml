<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:background="#5C5C5C"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:elevation="8dp"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FF7E6D"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_margin="8dp"
        android:layout_height="60dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#ededed"
        android:id="@+id/doc_list_img"
        android:src="@drawable/profile_512"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dr Bla Blah"
        android:layout_toRightOf="@+id/doc_list_img"
        android:paddingHorizontal="15dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:paddingBottom="2dp"
        android:textSize="22sp"
        android:textColor="#222222"
        android:id="@+id/list_doc_name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AIIMS Delhi"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/doc_list_img"
        android:layout_below="@+id/list_doc_name"
        android:paddingHorizontal="15dp"
        android:textColor="#ededed"
        android:paddingBottom="10dp"
        android:id="@+id/list_doc_hospital"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@+id/list_doc_hospital"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="start appointment"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_rad"
            android:layout_marginHorizontal="5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="5dp"
            android:id="@+id/start_doc_appointment"/>
        <Button
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="View profile"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_rad"
            android:layout_marginHorizontal="5dp"
            android:layout_alignParentRight="true"
            android:id="@+id/view_doc_profile"/>
    </LinearLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>